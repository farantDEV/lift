{% extends 'base_security.html.twig' %}
 
{% block body %}
    {% if error %}
        <div class="alert alert-danger">
            {{ error.messageKey }}
        </div>
    {% endif %}
    <div class="container">
		<div class="row">
			<div class="col-md-3 col-md-offset-4">
				<div class="account-box">
					<a href="{{ path('index') }}">
						<div class="logo ">
						<img src="assets/img/logo/logoFlint.svg" class="lf_logo"/>
						</div>
					</a>
					<form class="form-signin" action="{{ path('security_login') }}"  method="post">
						<div class="form-group">
							<input type="username" name="_username" class="form-control" placeholder="Username" required autofocus />
						</div>
						<div class="form-group">
							<input type="password" name="_password" class="form-control" placeholder="Password" required />
						</div>
						<label class="checkbox">
							<input type="checkbox" value="remember-me" />
							Keep me signed in
						</label>
						<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
						<button class="btn btn-lg btn-block purple-bg" type="submit">
							Sign in</button>
					</form>
					<a class="forgotLnk" href="">I can't access my account</a>
					<div class="or-box">
						<span class="or">OR</span>
						<div class="row">
							<div class="col-md-6 row-block">
								<a href="" class="btn btn-facebook btn-block">Facebook</a>
							</div>
							<div class="col-md-6 row-block">
								<a href="" class="btn btn-google btn-block">Google</a>
							</div>
						</div>
					</div>
					<div class="or-box row-block">
						<div class="row">
							<div class="col-md-12 row-block">
								<a href="{{ path('user_registration') }}" class="btn btn-register btn-block">Create New Account</a>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
